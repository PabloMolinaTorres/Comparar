  <style>
    body {
      font-family: sans-serif;
      padding: 40px;
      background: #fafafa;
    }
    h1 {
      margin-bottom: 20px;
    }
    .upload-box {
      border: 2px dashed #8fca00;
      border-radius: 10px;
      background: white;
      color: #444;
      padding: 40px;
      text-align: center;
      cursor: pointer;
      transition: background 0.2s ease;
    }
    .upload-box:hover {
      background: #f0fbe0;
    }
    .group {
      margin-top: 40px;
      border-top: 1px solid #ccc;
      padding-top: 20px;
    }
    .group-title {
      font-weight: bold;
      margin-bottom: 10px;
    }
    .pair {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }
    .pair img {
      width: 300px;
      max-width: 100%;
      border: 1px solid #ddd;
      padding: 5px;
      background: white;
    }
